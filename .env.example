# Alpaca API Configuration
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_PAPER_TRADING=true

# Strategy Configuration
STRATEGY_MODE=scan  # Options: run, scan, status, report
MAX_POSITIONS=10
INITIAL_CAPITAL=100000

# Risk Management Overrides (optional - will use config/settings.yaml defaults)
EXECUTION_GAP_THRESHOLD=1.5
QUALITY_GAP_THRESHOLD=2.0
MAX_HISTORICAL_VOL=0.40
MAX_GAP_FREQUENCY=0.15

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=true

# Database Configuration (if using PostgreSQL profile)
DB_PASSWORD=secure_password

# Cloud Provider Specific (AWS example)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Notification Configuration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Monitoring (optional)
ENABLE_METRICS=true
METRICS_PORT=8080